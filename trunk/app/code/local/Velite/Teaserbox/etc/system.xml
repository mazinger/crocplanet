<?xml version="1.0"?>

<config>
    <sections>
        <teaserbox translate="label">
            <label>Teaserbox</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>80</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <tbWidth translate="label">
                            <label>Teaserbox Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tbWidth>
                        <tbHeight translate="label">
                            <label>Teaserbox Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tbHeight>
                        <stageColor translate="label comment">
                            <label>Background Color</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Use Hex Values (FFFFFF for White)</comment>
                        </stageColor>
						
                        <enableTimer translate="label">
                            <label>Auto Sliding</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableTimer> 						
						
                        <timer translate="label comment">
                            <label>Timer</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Number of Seconds a Image gets displayed</comment>
                        </timer>						
						
                        <direction translate="label">
                            <label>Direction</label>
                            <frontend_type>select</frontend_type>
                            <source_model>velite_teaserbox_model_system_config_source_direction</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </direction>					

                        <containerSpeed translate="label comment">
                            <label>Animation speed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Number of seconds the animation takes</comment>
                        </containerSpeed>
                        
                        <showButtons translate="label">
                            <label>Show Buttons</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </showButtons> 	                        

                        <buttonTransparency translate="label comment">
                            <label>Button Transparency</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Accepted values are from 1 to 10 (10 = no transparency)</comment>
                        </buttonTransparency>
                    </fields>
                </general>
            </groups>
        </teaserbox>
    </sections>
</config>
