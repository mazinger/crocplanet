    <form id="discount-coupon-form" action="<?php echo $this->getUrl('checkout/cart/couponPost') ?>" method="post">
    <fieldset class="cart-coupon-block" style="background-color:#eee;padding:5px">
    <div class="f-left">
      <h4 style="height:11px;"><?php echo $this->__('Discount Codes') ?></h4>
      <br /><label for="coupon_code" style="font-weight:normal"><?php echo $this->__('Enter your coupon code if you have one.') ?></label>
     </div>
    
  <div class="f-right" style="margin-left:0px;margin-top:-27px;">
        <input type="hidden" name="remove" id="remove-coupone" value="0"/>
    <?php if(!strlen($this->getCouponCode())): ?>
        
    <input class="input-text" id="coupon_code" name="coupon_code" value="<?php echo $this->htmlEscape($this->getCouponCode()) ?>"/> &nbsp;<input  class="button-21-21" type="button" name="do" value=""
    	src="<?php echo $this->getSkinUrl('images/axiadesign/divers/bt_ok_off.gif') ?>" 
        alt="<?php echo $this->__('Apply Coupon') ?>"/>
    <?php else: ?>
        <input class="input-text" id="coupon_code" name="coupon_code" value="<?php echo $this->htmlEscape($this->getCouponCode()) ?>"/>&nbsp;<a class="button-21-21" href="#" onclick="discountForm.submit(true)">
        	<img style="display:none" src="<?php echo $this->getSkinUrl('images/axiadesign/divers/bt_ok_off.gif') ?>" 
            alt="<?php echo $this->__('Cancel Coupon') ?>" style="vertical-align:middle;" /></a><?php endif;?>
    </div>
    </fieldset>
</form>
<script type="text/javascript">
var discountForm = new VarienForm('discount-coupon-form');
discountForm.submit = function (isRemove) {
    if (isRemove) {
        $('coupon_code').removeClassName('required-entry');
        $('remove-coupone').value = "1";
    } else {
        $('coupon_code').addClassName('required-entry');
        $('remove-coupone').value = "0";
    }
    return VarienForm.prototype.submit.bind(discountForm)();
}
</script>
